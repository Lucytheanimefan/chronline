- provide :title, @taxonomy.to_a.join(', ')

- content_for :title_block do
  .nav-container
    %nav.subnav
      - @taxonomy.children.each do |subsection|
        %a.hover{href: "/section#{subsection.to_s}"}
          %h2= subsection.name
  %h1
    - @taxonomy.parents.each_with_index do |parent, i|
      - if i > 0
        &raquo;
      = link_to parent.name, "/section#{parent.to_s}"

.span-8
  - @articles.each do |article|
    .rounded
      %a.hover{href: site_article_path(article)}
        .content-container
          %h3= article.title
          .subtitle
            %span.date= article.created_at.strftime("%B %e, %Y")
            %span.author= byline(article)
          %p= article.teaser

.span-4.last
  = render partial: 'site/partials/advertisement', locals: {zone: :medium_rectangle}
  .title-small= render partial: 'site/containers/article-list/numbered', locals: {title: 'Popular', articles: @popular}
  = render 'site/partials/facebook-recommended'
