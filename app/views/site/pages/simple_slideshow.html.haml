.clearfix
  .span-8
    = render partial: 'site/partials/slideshow', locals: {articles: @model.slideshow, pages: []}
  .span-4.last
    .title-medium= render partial: 'site/containers/article-list', locals: {title: @model.list_title, articles: @model.top_articles, style: :featured}
.clearfix
  - @model.bottom_articles.each_with_index do |article, i|
    .span-4{class: (i % 3 == 2 ? 'last' : nil)}= render partial: 'site/containers/block/square', locals: {article: article}
