.clearfix.align-group
  .span-8.align-element{data: {alignprimary: "true"}}
    = render partial: 'site/partials/slideshow', locals: {articles: @layout.slideshow, pages: [], pages_first: true}
  .span-4.last.align-element{data: {aligntarget: ".rounded"}}
    .title-medium= render partial: 'site/containers/article-list', locals: {title: @layout.list_title, articles: @layout.top_articles, style: :featured}
.clearfix
  - (@layout.bottom_articles || []).each_with_index do |article, i|
    .span-4{class: (i % 3 == 2 ? 'last' : nil)}= render partial: 'site/containers/block/square', locals: {article: article}
