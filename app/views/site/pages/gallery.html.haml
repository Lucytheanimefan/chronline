.clearfix.align-group
  .span-8
    .rounded.featured
      .outer
        .title-area
          %h2#title= @model.slideshow.name
      .gallery
        - @model.slideshow.get_gallery_images.each do |image|
          %img{:src => image.url, :data => {:link => site_gallery_path(@model.slideshow)}}
    .rounded.clearfix.gal-col.span-4
      - @model.news.each do |gallery|
        .small-gallery
          = render partial: 'site/partials/small-photoshelter-slideshow', locals: {gallery: gallery, width: 300}
    .rounded.clearfix.gal-col
      - @model.sports.each do |gallery|
        .small-gallery
          = render partial: 'site/partials/small-photoshelter-slideshow', locals: {gallery: gallery, width: 300}
  .span-4.last
    = render partial: 'site/partials/advertisement', locals: {zone: :medium_rectangle}
    = render partial: 'site/partials/twitter-timeline', locals: {widget_id: @model.twitter_widget}
      
