- provide :title, @staff.name

- content_for :title_block do
  %h1= @staff.name

.span-12
  #images-container
    .item= render partial: 'site/containers/staff-profile', locals: {staff: @staff, except: :images}

    - styles = [:thumb_rect] * 4 << :large_rect
    - (@images * 20).each do |image|
      .item
        .rounded
          .image-container
            %a{href: image.original.url}
              - style = styles.sample
              = image_tag image.original.url(style), class: style
  = will_paginate @images
