.row
  .span8
    %h1 Page Layout
    %form#layout-data
  .span4
    = simple_form_for [:admin, @page], html: {id: 'page-settings'}, defaults: {input_html: {class: 'input-xlarge'}} do |f|
      %legend Page Settings
      .form-inputs
        = f.error_notification
        = f.input :title
        = f.input :path, label: "URL Path"
        = f.input :layout_schema do
          = f.select :layout_schema, page_layout_options
        = f.input :layout_data, as: :hidden, value_method: :to_json
        = f.input :description, as: :text, input_html: {rows: 3}
        = f.association :image, as: :image_picker
      .form-actions
        = f.button :submit, class: 'btn btn-large btn-primary'
